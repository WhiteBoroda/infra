{
  "dashboard": {
    "title": "Odoo Cluster Overview",
    "tags": ["odoo", "kubernetes", "performance"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Odoo Pods Status",
        "type": "stat",
        "targets": [
          {
            "expr": "count(kube_pod_info{namespace=~\"odoo-.*\", pod=~\"odoo-.*\"})",
            "legendFormat": "Total Pods"
          },
          {
            "expr": "count(kube_pod_status_phase{namespace=~\"odoo-.*\", pod=~\"odoo-.*\", phase=\"Running\"})",
            "legendFormat": "Running"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=~\"odoo-.*\", pod=~\"odoo-.*\"}[5m])) by (pod)",
            "legendFormat": "{{ pod }}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4}
      },
      {
        "id": 3,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(container_memory_usage_bytes{namespace=~\"odoo-.*\", pod=~\"odoo-.*\"}) by (pod)",
            "legendFormat": "{{ pod }}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4}
      },
      {
        "id": 4,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{namespace=~\"odoo-.*\"}[5m])) by (namespace)",
            "legendFormat": "{{ namespace }}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12}
      },
      {
        "id": 5,
        "title": "Response Time (95th percentile)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{namespace=~\"odoo-.*\"}[5m]))",
            "legendFormat": "{{ namespace }}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12}
      },
      {
        "id": 6,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{namespace=~\"odoo-.*\", status=~\"5..\"}[5m])) by (namespace)",
            "legendFormat": "{{ namespace }} - 5xx"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20}
      },
      {
        "id": 7,
        "title": "Database Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_stat_database_numbackends{namespace=~\"odoo-.*\"}",
            "legendFormat": "{{ datname }}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20}
      },
      {
        "id": 8,
        "title": "Pod Restarts",
        "type": "graph",
        "targets": [
          {
            "expr": "kube_pod_container_status_restarts_total{namespace=~\"odoo-.*\", pod=~\"odoo-.*\"}",
            "legendFormat": "{{ pod }}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28}
      },
      {
        "id": 9,
        "title": "Network I/O",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(container_network_receive_bytes_total{namespace=~\"odoo-.*\", pod=~\"odoo-.*\"}[5m])) by (pod)",
            "legendFormat": "{{ pod }} - RX"
          },
          {
            "expr": "sum(rate(container_network_transmit_bytes_total{namespace=~\"odoo-.*\", pod=~\"odoo-.*\"}[5m])) by (pod)",
            "legendFormat": "{{ pod }} - TX"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28}
      }
    ]
  }
}
